@model School.Models.Teacher

@{
    ViewBag.Title = "DeleteConfirm";
}


<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/Show/@Model.Teacherid">Cancel</a>
    </nav>
    <h2>Are you sure you want to delete teacher# @Model.Employeenumber @Model.Teacherfname @Model.Teacherlname?</h2>
    <p>This action cannot be undone.</p>
    <form method="POST" action="/Teacher/Delete/@Model.Teacherid">
        <button class="delbutton">
            Confirm Delete
        </button>
    </form>
</div>